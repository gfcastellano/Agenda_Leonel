<Visitas_tab@Tab>:
    BoxLayout:
        orientation: 'vertical'
        #size_hint_y: None
        #height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height + 15
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            MDIconButton:
                icon: 'calendar'
                on_release: app.root.get_screen('Visitas_tela').abrir_popup_primeira_data()
            MDLabel:
                id: data	
                halign: 'center'
            MDIconButton:
                text: 'Escolher data'
                icon: 'backspace'	
                on_release: app.root.get_screen('Visitas_tela').apagar_data() 
#---------------------------------------LISTA DE VISITAS
        ScrollView:
            id: scroll_visitas
            BoxLayout:
                id: box_scroll
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
    MDFloatingActionButton:
        icon: 'plus'
        md_bg_color: app.theme_cls.primary_dark
        rotation_root_button: True
        pos_hint: {"center_x": .9, "center_y": .1}

    



<BoxparaScroll@BoxLayout>:
    padding: [5,0,0,0]
    size_hint_y: None
    height: 120


<ClickMDLabel@ButtonBehavior+MDLabel>
    color: app.theme_cls.primary_color


<Tab>:
    MDLabel:
        pos_hint: {"center_x": .5, "center_y": .5}

