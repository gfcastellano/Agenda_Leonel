

<Info_tela>:
    BoxLayout:
        orientation: 'vertical'
#---------------------------------------HEADER
        MDToolbar:
            id: toolbar
            title: 'Informações'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["map-marker", lambda x: root.ir_para_mapa()],["dots-vertical", lambda x: root.editar()]]
        


        MDTabs:
            lock_swiping: True
            Info_tab:
                text: 'Informações'
                id: info_tab
            Visitas_tab:
                text: 'Visitas'
                id: visitas_tab
            Tab:
                text: 'Vendas'
                id: vendas_tab
        




