
<Adicionar_cliente_tela>:
    BoxLayout:
        orientation: 'vertical'
#---------------------------------------HEADER
        MDToolbar:
            title: 'Adicionar Cliente'
            md_bg_color: app.theme_cls.primary_dark
            size_hint_y: None
            height: 150
            pos_hint: {'top':1}
            elevation: 11
            left_action_items: [["menu-left", lambda x: app.voltar_toolbar()]]
            right_action_items: [["account-plus-outline", lambda x: root.adicionar()]]
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
#-------------------------------------------------CAIXAS
                BoxparaScroll:
                    MDLabel:
                        text: 'Codigo:'
                        size_hint_x: 0.5
                    MDLabel:
                        id: codigo
                        bold: True
                BoxparaScroll:
                    MDLabel:
                        text: 'Nome:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: nome_fantasia
                BoxparaScroll:
                    MDLabel:
                        text: 'Endereco:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: endereco
                BoxparaScroll:
                    MDLabel:
                        text: 'Numero:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: numero
                BoxparaScroll:
                    MDLabel:
                        text: 'Bairro:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: bairro
                BoxparaScroll:
                    MDLabel:
                        text: 'Cidade:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: cidade
                BoxparaScroll:
                    MDLabel:
                        text: 'Telefone:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: telefone_fixo
				BoxparaScroll:
                    MDLabel:
                        text: 'Perfil:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: perfil_cliente					
                BoxparaScroll:
                    MDLabel:
                        text: 'Contato'
                        halign: 'center'
                    MDLabel:
                        text: 'Telefone'
                        halign: 'center'
                    MDLabel:
                        text: 'Tipo'
                        halign: 'center'
                BoxparaScroll:
                    MDTextField:
                        id: nome_1
                    MDTextField:
                        id: telefone_1
                    MDTextField:
                        id: tipo_1
				BoxparaScroll:
                    MDTextField:
                        id: nome_2
                    MDTextField:
                        id: telefone_2
                    MDTextField:
                        id: tipo_2
				BoxparaScroll:
                    MDTextField:
                        id: nome_3
                    MDTextField:
                        id: telefone_3
                    MDTextField:
                        id: tipo_3
                BoxparaScroll:
                    MDLabel:
                        text: 'Banho:'
                        halign: 'center'
                    MDLabel:
                        text: 'Tosa:'
                        halign: 'center'
                    MDLabel:
                        text: 'Pet-Shop:'
                        halign: 'center'
                    MDLabel:
                        text: 'Clinica:'
                        halign: 'center'
                BoxparaScroll:
                    MDCheckbox:
                        id: banho
                    MDCheckbox:
                        id: tosa
                    MDCheckbox:
                        id: pet_shop
                    MDCheckbox:
                        id: clinica
                BoxparaScroll:
                    MDLabel:
                        text: 'Razao Social:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: razao_social
                BoxparaScroll:
                    MDLabel:
                        text: 'CNPJ:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: cnpj
                BoxparaScroll:
                    MDLabel:
                        text: 'CEP:'
                        size_hint_x: 0.5
                    MDTextField:
                        id: cep
#-------------------------------------------------------------BOTaO DE ADICIONAR
        MDRaisedButton:
            text: 'Adicionar'
            on_release: root.adicionar()
            size_hint_x: 1
            size_hint_y: None
            height: 100



